<div class="container">
<div class="col-lg-8 col-lg-offset-2">
    <div class="page-header">
        <h1>Create a Sample</h1>
    </div>
    <%= form_for(:sample, :url => {:controller => "dashboard/sample", :action => "process_create"}, :required => true, html: { multipart: true }) do |f| %>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>Field</th>
            <th>Data</th>
        </tr>
        </thead>

        <tr>
            <td>Name</td>
            <td><%=f.text_field :name, class: 'form-control' %></td>
        </tr>
        <tr>
            <td>Tags</td>
            <td><%=f.text_field :tag_list, class: 'form-control' %></td>
        </tr>
        <tr>
            <td>Expected Score (Optional)</td>
            <td><%=f.number_field :expected_score, in: 0..10, class: 'form-control' %></td>
        </tr>
        <tr>
            <td>File</td>
            <td><%= f.file_field :audio %></td>
        </tr>
    </table>
    <%= f.submit "Save", class: "btn btn-primary btn-block" %>
    <% end %>
</div>
</div>