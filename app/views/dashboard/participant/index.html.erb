<% content_for :title, "Participants" %>

<div class="container">
    <div class="row">
      <h1 class="page-header">Manage Participants</h1>
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Username</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @participants.each do |participant| %>
          <tr>
          <td> <%= participant.id %> </td>
          <td> <%= participant.username %> </td>
          <td> <%= link_to("Details", "/dashboard/participants/#{participant.id}") %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
</div>